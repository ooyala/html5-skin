{
  "env": {
    "browser": true,
    "commonjs": true,
    "jest": true,
    "es6": false,
    "node": false
  },
  "globals": {
    "OO": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "brace-style": ["warn"],
    "camelcase": ["warn"],
    "id-length": ["warn", { "exceptions": ["_", "$"] }],
    "keyword-spacing": ["warn"],
    "no-magic-numbers": ["warn", { "ignore": [0, -1, 1] }],
    "no-param-reassign": ["warn"],
    "no-unused-vars": ["warn"],
    "one-var": ["warn", "never"],
    "one-var-declaration-per-line": ["warn"],
    "spaced-comment": ["warn"],
    "valid-typeof": ["warn"],

    "default-case": ["error"],
    "eqeqeq": ["error"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": { "var": 2 }
      }
    ],
    "max-len": [
      "error", 110, 
      {
        "ignoreComments": true
      }
    ],
    "no-continue": ["warn"],
    "no-dupe-args": ["error"],
    "no-dupe-keys": ["error"],
    "no-fallthrough": ["warn"],
    "no-mixed-spaces-and-tabs": ["error"],
    "no-multiple-empty-lines": ["error"],
    "no-undef": ["error"],
    "no-unneeded-ternary": ["error"],
    "no-unreachable": ["error"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "return": "returns"
        },
        "requireReturn": false
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "FunctionDeclaration": true
        }
      }
    ],
    "yoda": ["error"],

    "react/jsx-uses-vars": ["error"],
    "react/jsx-uses-react": ["error"],
    "react/react-in-jsx-scope": ["error"]
  }
}
